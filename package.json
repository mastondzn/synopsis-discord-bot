{
    "name": "synopsis-bp",
    "version": "0.0.0",
    "engines": {
        "node": ">= 16.13 <17"
    },
    "author": {
        "email": "MastonDZN@users.noreply.github.com",
        "name": "MastonDZN",
        "url": "https://github.com/MastonDZN"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MastonDZN/synopsis-bp"
    },
    "bugs": {
        "url": "https://github.com/MastonDZN/synopsis-bp/issues"
    },
    "keywords": [
        "template",
        "boilerplate",
        "node",
        "typescript",
        "jest",
        "prettier"
    ],
    "license": "Apache-2.0",
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.22",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "cspell": "^5.19.2",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-formatter-pretty": "4.1.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "25.3.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "6.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "eslint-plugin-unicorn": "40.0.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.0",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.21",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.3"
    },
    "scripts": {
        "start": "ts-node-dev src/main.ts",
        "start:prod": "node ./build/src/main.js",
        "start:r": "ts-node-dev --respawn src/main.ts",
        "playground": "ts-node-dev src/playground/playground.ts",
        "playground:r": "ts-node-dev --respawn src/playground/playground.ts",
        "build": "tsc -p tsconfig.json",
        "build:watch": "tsc -w -p tsconfig.json",
        "test": "jest --verbose",
        "test:watch": "jest --watch",
        "coverage": "jest --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts --format=pretty",
        "lint:fix": "yarn lint --fix",
        "format": "prettier --list-different ./**/*.{js,jsx,ts,tsx,json,md,yaml}",
        "format:fix": "prettier --write ./**/*.{js,jsx,ts,tsx,json,md,yaml}",
        "spelling": "cspell **/*.{js,jsx,ts,tsx,md,json}",
        "clean": "rimraf coverage build tmp"
    }
}
