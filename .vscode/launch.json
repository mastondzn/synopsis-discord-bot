{
    "configurations": [
        {
            "name": "Build and Launch Program",
            "outFiles": ["${workspaceFolder}/build/**/*.js"],
            "preLaunchTask": "yarn: build",
            "program": "${workspaceFolder}/src/main.ts",
            "request": "launch",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "smartStep": true,
            "type": "node"
        },
        {
            "name": "Launch with ts-node",
            "type": "node-terminal",
            "request": "launch",
            "command": "yarn start"
        },
        {
            "name": "Launch playground with ts-node",
            "type": "node-terminal",
            "request": "launch",
            "command": "yarn playground"
        }
    ],
    "version": "0.2.0"
}
